

<h1>Bookings</h1>

<div id="bookings">

  <%= calendar do |date| %>
    <%= date.day %>
    <% if @time_blocks_by_date[date] %>
    <ul>
      <% @bookings_by_date[date]each do |booking| %>
        <li><%= link_to booking.user.consumer.first_name, booking %></li>
        <% end %>
    </ul>
    <% end %>
  <% end %>
</div>
