<div class="user-profile">
  <h1>Your Profile</h1>
  <p>Profile Pic: <%= @consumer.profile_img %></p>
  <p>Name: <%= @consumer.name %></p>
  <p>City: <%= @consumer.city %></p>
  <p>Phone Number: <%= @consumer.phone_number %></p>
  <p>Instagram: @<%= @consumer.instagram %></p>

  <p><%= link_to 'Edit Profile', edit_consumer_path %></p>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="user-bookings">
          <div class="booking-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          <img class="booking-card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <div class="booking-card-description">
            <h2>Sean Span</h2>
            <p>Makeup | LA | @seanspan</p>
            <p>Appointment on October 6th, 2017 @ 4pm PST</p>
            <p>123 Hollywood, CA 90032</p>

          </div>

          <a class="booking-card-link" href="#" ></a>
        </div>
      </div>
    </div>
  </div>
</div>
