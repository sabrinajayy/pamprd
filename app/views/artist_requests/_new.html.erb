<div class="modal fade" id='<%= "requestModal#{event.id}"  %>' tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="requestModalLabel">New Quote</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for(:artist_request, url: create_artist_request_path(artist_id: @artist.id, consumer_event_id: event.id)) do |f| %>
          <%= f.input :offer_price, as: :integer, placeholder: "Enter your quote for this event" %>
            <%= f.input :message, as: :text, placeholder: "Send a message to #{event.user.consumer.first_name}" %>

          <%#= render 'artist_requests/form', event: event%>
        </div>
        <div class="modal-footer">
          <%= f.submit "Submit Quote", class: 'btn-pamprd' %>
          <% end %>
            <!-- <button type="button" class="btn-pamprd" data-dismiss="modal">Close</button> -->
        </div>
      </div>
    </div>
  </div>
