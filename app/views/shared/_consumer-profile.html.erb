<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
<%= simple_form_for @consumer, html: {id: 'req'} do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :phone_number, required: false %>
  <%= f.input :city, required: false %>
  <%= f.input :profile_img, label: "Upload your profile photo" %>
  <%= f.input :profile_img_cache, as: :hidden %>
  <%= f.input :instagram, required: false %>


  <%= f.button :submit, "Update Profile", class: 'update-profile', id: 'req-button' %>
<%end%>
    </div>
  </div>
</div>
