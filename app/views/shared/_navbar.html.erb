
<nav class="navbar  navbar-fixed-top">
  <div class="navbar-wagon <%= transparent %>">
    <!-- Logo -->
    <a href="/" class="navbar-wagon-brand">
      <img src="https://maxcdn.icons8.com/Share/icon/Beauty//mirror1600.png" alt="logo">
    </a>

    <% if user_signed_in? %>
      <% if current_user.is_artist? %>
        <!-- Right Navigation -->
        <div class="navbar-wagon-right">
          <h6><strong>Hello, <%= current_user.artist.first_name %>!</strong></h6>
          <%= link_to 'Bookings', artist_path(current_user.artist), class: "navbar-wagon-item navbar-wagon-link" %>

          <!-- Profile picture with dropdown list -->
          <div class="navbar-wagon-item">
            <div class="dropdown">
            <% if !current_user.artist.photo %>
              <%= cl_image_tag current_user.artist.photo, class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', data: { toggle: 'dropdown' }, width: 300, height: 300, crop: :fill %>
              <% else %>
              <%= cl_image_tag "http://res.cloudinary.com/dl12g2ws3/image/upload/v1505729708/profile-icon_xx3teu.png", class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', data: { toggle: 'dropdown' }, width: 300, height: 300, crop: :fill %>
              <% end %>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li><%= link_to 'Profile', artist_path(current_user.artist), class: "navbar-wagon-item navbar-wagon-link" %></li>
                <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </div>
          </div>
        </div>
      <% elsif current_user.is_consumer? %>
        <div class="navbar-wagon-right">
        <h6><strong>Hello, <%= current_user.consumer.first_name %>!</strong></h6>
          <!-- <a href="" class="navbar-wagon-item navbar-wagon-link">Bookings</a> -->
           <%= link_to 'Bookings', consumer_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>

          <!-- Profile picture with dropdown list -->
          <div class="navbar-wagon-item">
            <div class="dropdown">
            <% if !current_user.consumer.profile_img %>
              <%= cl_image_tag current_user.consumer.profile_img, class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', data: { toggle: 'dropdown' }, width: 300, height: 300, crop: :fill %>
                <% else %>
              <%= cl_image_tag "http://res.cloudinary.com/dl12g2ws3/image/upload/v1505729708/profile-icon_xx3teu.png", class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', data: { toggle: 'dropdown' }, width: 300, height: 300, crop: :fill %>
              <% end %>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li><%= link_to 'Profile', consumer_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %></li>
                <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>

      <div class="navbar-wagon-right hidden-sm hidden-xs">
        <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link text-white" %>
        <%= link_to 'Login', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link text-white" %>
      </div>

      <div class="navbar-wagon-right hidden-md hidden-lg">
        <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle text-white" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'Sign Up', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Login', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        </ul>
      </div>
     </div>
    <% end %>
  </div>
</nav>


